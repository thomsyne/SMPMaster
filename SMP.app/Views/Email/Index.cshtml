
@{
    ViewBag.Title = "Email";
}
<link href="~/temp/vendors/datatables.net-bs/css/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/temp/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/temp/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css" rel="stylesheet">
<link href="~/temp/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css" rel="stylesheet">
<link href="~/temp/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet">
<link href="~/temp/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet">

<div class="col-lg-9">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <a class="btn-sm btn-primary" id="AddEmail"><i class="fa fa-plus"></i>Add New</a>
            </div>
            <div class="x_content">
                <div id="datatable-buttons_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <table id="datatable-buttons" class="table table-striped table-bordered dataTable no-footer dtr-inline" role="grid" aria-describedby="datatable-buttons_info">
                        <thead>
                            <tr role="row">
                                <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending">Name</th>
                                <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-label="School: activate to sort column ascending">School</th>
                                <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-label="Program: activate to sort column ascending">Program</th>
                                <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-label="Class: activate to sort column ascending">Class</th>
                                <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-label="MaxStudent: activate to sort column ascending">Max Student</th>
                                <th style="width:79px">
                                    (Action)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr role="row" class="odd">
                                <td tabindex="0" class="sorting_1">Airi Satou</td>
                                <td>Accountant</td>
                                <td>Tokyo</td>
                                <td>JSS</td>
                                <td>30</td>
                                <td style="margin:10px">
                                    <a class="btn-sm btn-warning" onclick=""><span class="fa fa-edit"></span></a>
                                    <a style="margin-left:10px" class="btn-sm btn-danger" onclick=""><span class="fa fa-trash"></span></a>
                                </td>
                            </tr>
                            <tr role="row" class="even">
                                <td tabindex="0" class="sorting_1">Cedric Kelly</td>
                                <td>Senior Javascript Developer</td>
                                <td>Edinburgh</td>
                                <td>SS</td>
                                <td>70</td>
                                <td style="margin:10px">
                                    <a class="btn-sm btn-warning" onclick=""><span class="fa fa-edit"></span></a>
                                    <a style="margin-left:10px" class="btn-sm btn-danger" onclick=""><span class="fa fa-trash"></span></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    @*Create A Popup Modal With Email Form For Add or Email Country Form*@

                    <div class="modal fade" id="MyModal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" style="margin:5px">
                                        <span aria-hidden="true">×</span>
                                    </button>
                                    <div class="x_title" style="border-bottom:0px; padding:0px 0px 0px; margin-bottom:0px">
                                        <a class="btn btn-sm btn-warning" id="" href="/Email/Index" style="margin:5px">Cancel</a>
                                    </div>
                                </div>
                                <div class="modal-body">
                                    <form id="form" class="form-horizontal">
                                        <fieldset>
                                            <div class="col-md-12">
                                                <label class="control-label col-md-4 col-sm-3 col-xs-12" for="name">
                                                    Name <span class="required" style="color:red;">*</span>
                                                </label>
                                                <div class="col-md-5 col-sm-5 col-xs-12">
                                                    <input id="name" class="form-control col-md-7 col-xs-12" data-validate-length-range="" data-validate-words="1" name="name" placeholder="e.g JSS1A,SSS1C" required="required" type="text">
                                                </div>
                                            </div>
                                            <div class="clearfix" style="margin:10px"></div>

                                            <div class="col-md-12">
                                                <label class="control-label col-lg-4 col-sm-3 col-xs-12">
                                                    School Name <span class="required" style="color:red;">*</span>
                                                </label>
                                                <div class="col-lg-8 col-sm-6 col-xs-12">
                                                    <select class="select2_single form-control" tabindex="-1" style="width:197px">
                                                        <option>--Select an Option--</option>
                                                        <option>First School</option>
                                                        <option>Second Nigeria</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="clearfix" style="margin:10px"></div>
                                            <div class="col-md-12">
                                                <label class="control-label col-lg-4 col-sm-3 col-xs-12">
                                                    Class Name <span class="required" style="color:red;">*</span>
                                                </label>
                                                <div class="col-lg-8 col-sm-6 col-xs-12">
                                                    <select class="select2_single form-control" tabindex="-1" style="width:197px">
                                                        <option>--Select an Option--</option>
                                                        <option>Class1</option>
                                                        <option>Class2 Period</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="clearfix" style="margin:10px"></div>
                                            <div class="col-md-12">
                                                <label class="control-label col-lg-4 col-sm-3 col-xs-12">
                                                    Program <span class="required" style="color:red;">*</span>
                                                </label>
                                                <div class="col-lg-8 col-sm-6 col-xs-12">
                                                    <select class="select2_single form-control" tabindex="-1" style="width:197px">
                                                        <option>--Select an Option--</option>
                                                        <option>First Year Program</option>
                                                        <option>Other Program</option>
                                                    </select>
                                                </div>
                                            </div> 
                                            <div class="clearfix" style="margin:10px"></div>

                                            <div class="col-md-12">
                                                <label class="control-label col-md-4 col-sm-3 col-xs-12" for="name">
                                                    Max Student <span class="required" style="color:red;">*</span>
                                                </label>
                                                <div class="col-md-5 col-sm-5 col-xs-12">
                                                    <input id="number" class="form-control col-md-7 col-xs-12" data-validate-length-range="3" data-validate-words="1" name="name" placeholder="e.g 999" required="required" type="text">
                                                </div>
                                            </div>
                                            <div class="clearfix" style="padding-top:5px"></div>

                                            <div class="row" style="margin:10px; text-align:center">
                                                <a class="btn btn-sm btn-success" id="" href=""><i class="fa fa-check"></i>Save</a>
                                            </div>
                                        </fieldset>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-lg-3" id="right_sidebar">
    <div style="">
        <i class="fa fa-user"></i>
        <span class="light-grey">Created By:<span class="label label-default">system </span></span>
    </div>
    <div style="margin-top:10px">
        <i class="fa fa-calendar"></i>
        <span class="light-grey">Date Created:<span class="label label-default">@DateTime.Now.ToString("dd-MM-yyyy")</span></span>
    </div>
    <div style="margin-top:10px" class="div-authname">
        <i class="fa fa-user"></i>
        <span class="light-grey">Last Authorized By:<span class="label label-default">Emmanuel Abiodun</span></span>
    </div>
    <div style="margin-top:10px" class="div-authname">
        <i class="fa fa-user"></i>
        <span class="light-grey">Last Modified By:<span class="label label-default">Emmanuel Abiodun</span></span>
    </div>
    <div style="margin-top:10px" class="div-authdate">
        <i class="fa fa-calendar"></i>
        <span class="light-grey">Last Modified Date:<span class="label label-default">07-Mar-2018</span></span>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#AddEmail").click(function () {
                $("#form")[0].reset();
                $("#ModalTitle").html("Email Details")
                $("#MyModal").modal();
            })
        });
    </script>
    <script src="~/temp/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/temp/vendors/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/temp/vendors/datatables.net-buttons-bs/js/buttons.bootstrap.min.js"></script>
    <script src="~/temp/vendors/datatables.net-buttons/js/buttons.html5.min.js"></script>
    <script src="~/temp/vendors/datatables.net-buttons/js/buttons.print.min.js"></script>
    <script src="~/temp/vendors/validator/validator.js"></script>
}
