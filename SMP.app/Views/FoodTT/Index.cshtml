<script src="~/temp/vendors/datatables.net-buttons-bs/js/buttons.bootstrap.min.js"></script>
<script src="~/temp/vendors/datatables.net-buttons/js/buttons.flash.min.js"></script>
<script src="~/temp/vendors/datatables.net-buttons/js/buttons.html5.min.js"></script>
<script src="~/temp/vendors/datatables.net-buttons/js/buttons.print.min.js"></script>
<script src="~/temp/vendors/datatables.net-fixedheader/js/dataTables.fixedHeader.min.js"></script>           

<script>
     $(function () {
                var successMessage = '@TempData["SuccessMessage"]'
                if (successMessage != '')
                alertify.success(successMessage);
                });

                function Delete(id) {
                alertify.confirm('School Management Portal', 'Are you sure to Delete this record ?', function () {
                window.location.href = '@Url.Action("Delete", "SchoolProfile")/' + id;
                }, null)
                }
</script>
 
