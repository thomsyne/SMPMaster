@model IEnumerable<SMP.app.Models.Food_Timetable>
@{
    ViewBag.Title = "Index";
}

<link href="~/temp/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/temp/vendors/datatables.net-bs/css/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/temp/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css" rel="stylesheet" />
<link href="~/temp/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css" rel="stylesheet" />
<link href="~/temp/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet" />
<link href="~/temp/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet" />


    <div class="x_panel">
        <div class="x_title">
            <a href="@Url.Action("AddOrEdit","FoodTT")" class="btn-primary btn-sm" type="reset"><i class="fa fa-plus">Add New </i></a>
        </div>
        <div class="x_content">
            <div id="datatable-buttons_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                <table id="datatable-buttons" class="table table-striped table-bordered dataTable no-footer dtr-inline" role="grid" aria-describedby="datatable-buttons_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending">
                                @Html.DisplayNameFor(model => model.MenuTypeId)
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending">
                                @Html.DisplayNameFor(model => model.Menu_DayId)
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending">
                                @Html.DisplayNameFor(model => model.Start_Time)
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending">
                                @Html.DisplayNameFor(model => model.End_Time)
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending">
                                @Html.DisplayNameFor(model => model.Menu_Description)
                            </th>
                            <th style="width:80px">
                                (Action)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.MenuTypeId)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Menu_DayId)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Start_Time)</td>
                                    <td>@Html.DisplayFor(modelItem => item.End_Time)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Menu_Description)</td>
                                    
                                    <td>
                                        <a href="@Url.Action("AddOrEdit","FoodTT", new { id = item.ItbId})" class="btn-sm btn-primary" onclick=""><span class="fa fa-edit"></span></a>
                                        
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

@section scripts{
     <script src="~/temp/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/temp/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
