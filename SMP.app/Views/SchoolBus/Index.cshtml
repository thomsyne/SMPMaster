@model IEnumerable<SMP.app.Models.School_Bus>
@{
    ViewBag.Title = "Index";
}
<link href="~/temp/vendors/datatables.net-bs/css/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/temp/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/temp/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css" rel="stylesheet">
<link href="~/temp/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css" rel="stylesheet">
<link href="~/temp/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet">
<link href="~/temp/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet">

    <div class="x_panel">
        <div class="x_title">
            <a href="@Url.Action("AddOrEdit","SchoolBus")" class="btn-sm btn-primary"><i class="fa fa-plus">Add New</i></a>
        </div>
        <div class="x_content">
            <table id="datatable-buttons" class="table table-striped table-bordered">
                <thead>
                    <tr role="row">
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.RouteId)</th>
                        <th>@Html.DisplayNameFor(model => model.Driver_Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Driver_Phone_No)</th>
                        <th>@Html.DisplayNameFor(model => model.Price)</th>
                        <th style="width:80px">Action</th>
                    </tr>
                </thead>

              @if (Model != null)
              {
                  foreach (var item in Model)
                  {
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.RouteId)</td>
                            <td>@Html.DisplayFor(modelItem => item.Driver_Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Driver_Phone_No)</td>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td>
                                <a href="@Url.Action("AddOrEdit", "SchoolBus", new { id = item.ItbId })" class="btn-sm btn-primary" onclick=""><span class="fa fa-edit"></span></a>
                            </td>
                        </tr>
                    </tbody>
                  }
              }
            </table>
        </div>
    </div>


@section Scripts{
    <script src="~/temp/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/temp/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/temp/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/temp/vendors/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/temp/vendors/datatables.net-buttons-bs/js/buttons.bootstrap.min.js"></script>
    <script src="~/temp/vendors/datatables.net-buttons/js/buttons.flash.min.js"></script>
    <script src="~/temp/vendors/datatables.net-buttons/js/buttons.html5.min.js"></script>
    <script src="~/temp/vendors/datatables.net-buttons/js/buttons.print.min.js"></script>
    <script src="~/temp/vendors/datatables.net-fixedheader/js/dataTables.fixedHeader.min.js"></script>
    <script>
     $(function () {
                var successMessage = '@TempData["SuccessMessage"]'
                if (successMessage != '')
                alertify.success(successMessage);
                });

                function Delete(id) {
                alertify.confirm('School Management Portal', 'Are you sure to Delete this record ?', function () {
                window.location.href = '@Url.Action("Delete", "User")/' + id;
                }, null)
                }
    </script>
}
